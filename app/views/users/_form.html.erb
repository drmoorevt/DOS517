<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

   <% if @user.username != nil %>
      <p>
        <b>Username:</b>
        <%= @user.username %>
     </p>
   <% else %>
      <div class="field">
        <%= f.label :username %><br />
        <%= f.text_field :username %>
      </div>
   <% end %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </div>

  <% if @user.id.nil? %>
  <div class="field">
    <%= f.label :password %><br />
    <%= password_field(:user, :password, :size => 20) %>
  </div>
    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= password_field(:user, :password_confirmation, :size => 20) %>
  </div>

  <% end %>

    <% if !@user.id.nil? %>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
        <% end %>
  <% if session[:user_admin] && session[:user_id] != @user.id && @user.username != "admin"%>

   <div class="field">
    <%= f.label :admin_flag %><br />
    <%= f.check_box :admin_flag %>
  </div>

        <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
